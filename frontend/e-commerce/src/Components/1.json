{
  "nodes": [
    {
      "parameters": {
        "updates": ["message"]
      },
      "id": "telegram_trigger",
      "name": "Telegram Trigger",
      "type": "n8n-nodes-base.telegramTrigger",
      "typeVersion": 1.2,
      "position": [-600, 400],
      "credentials": {
        "telegramApi": {
          "id": "YOUR_TELEGRAM_API_CRED_ID",
          "name": "Telegram account"
        }
      }
    },
    {
      "parameters": {
        "conditions": {
          "options": {},
          "conditions": [
            {
              "id": "pdf_check",
              "leftValue": "={{$json[\"message\"][\"document\"][\"file_name\"]}}",
              "rightValue": ".pdf",
              "operator": { "type": "string", "operation": "endsWith" }
            }
          ],
          "combinator": "and"
        }
      },
      "id": "if_pdf",
      "name": "If PDF?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [-400, 400]
    },
    {
      "parameters": {
        "chatId": "={{$json[\"message\"][\"chat\"][\"id\"]}}",
        "text": "Thanks! I received your PDF. Processing it now..."
      },
      "id": "ack_pdf",
      "name": "Send Acknowledgement",
      "type": "n8n-nodes-base.telegram",
      "typeVersion": 1.2,
      "position": [-200, 400],
      "credentials": {
        "telegramApi": { "id": "YOUR_TELEGRAM_API_CRED_ID", "name": "Telegram account" }
      }
    },
    {
      "parameters": {
        "url": "=https://api.telegram.org/botYOUR_BOT_TOKEN/getFile?file_id={{$json[\"message\"][\"document\"][\"file_id\"]}}"
      },
      "id": "get_file_info",
      "name": "Get File Info",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [0, 400]
    },
    {
      "parameters": {
        "url": "=https://api.telegram.org/file/botYOUR_BOT_TOKEN/{{ $json.result.file_path }}",
        "options": {}
      },
      "id": "download_pdf",
      "name": "Download PDF",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [200, 400]
    },
    {
      "parameters": {
        "operation": "pdf",
        "options": {}
      },
      "id": "extract_pdf_text",
      "name": "Extract PDF Text",
      "type": "n8n-nodes-base.extractFromFile",
      "typeVersion": 1,
      "position": [400, 400]
    },
    {
      "parameters": {
        "assignments": {
          "assignments": [
            {
              "id": "format_text",
              "name": "text",
              "type": "string",
              "value": "=Document Content: {{ $json.text }}"
            }
          ]
        }
      },
      "id": "format_pdf_text",
      "name": "Format PDF Text",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.4,
      "position": [600, 400]
    },
    {
      "parameters": {
        "sessionIdType": "customKey",
        "sessionKey": "=pdf-session-{{ $json.message.from.id }}"
      },
      "id": "store_memory",
      "name": "Window Buffer Memory",
      "type": "@n8n/n8n-nodes-langchain.memoryBufferWindow",
      "typeVersion": 1.2,
      "position": [800, 400]
    },
    {
      "parameters": {
        "assignments": {
          "assignments": [
            {
              "id": "user_message",
              "name": "message_text",
              "type": "string",
              "value": "={{ $json.text }}"
            },
            {
              "id": "user_id",
              "name": "from",
              "type": "string",
              "value": "={{$json.message.from.id}}"
            }
          ]
        }
      },
      "id": "get_user_question",
      "name": "Get User's Question",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.4,
      "position": [600, 200]
    },
    {
      "parameters": {
        "agent": "conversationalAgent",
        "promptType": "define",
        "text": "=The user asked:\n```{{ $json.message_text }}```\nUse the uploaded PDF content in memory to answer."
      },
      "id": "ai_agent",
      "name": "AI Agent",
      "type": "@n8n/n8n-nodes-langchain.agent",
      "typeVersion": 1.6,
      "position": [800, 200]
    },
    {
      "parameters": {
        "chatId": "={{ $json.from }}",
        "additionalFields": {}
      },
      "id": "reply_user",
      "name": "Send Reply",
      "type": "n8n-nodes-base.telegram",
      "typeVersion": 1.2,
      "position": [1000, 200],
      "credentials": {
        "telegramApi": { "id": "YOUR_TELEGRAM_API_CRED_ID", "name": "Telegram account" }
      }
    }
  ],
  "connections": {
    "Telegram Trigger": { "main": [[{ "node": "if_pdf", "type": "main", "index": 0 }]] },
    "If PDF?": {
      "main": [[{ "node": "ack_pdf", "type": "main", "index": 0 }]]
    },
    "Send Acknowledgement": {
      "main": [[{ "node": "get_file_info", "type": "main", "index": 0 }]]
    },
    "Get File Info": { "main": [[{ "node": "download_pdf", "type": "main", "index": 0 }]] },
    "Download PDF": { "main": [[{ "node": "extract_pdf_text", "type": "main", "index": 0 }]] },
    "Extract PDF Text": { "main": [[{ "node": "format_pdf_text", "type": "main", "index": 0 }]] },
    "Format PDF Text": { "main": [[{ "node": "store_memory", "type": "main", "index": 0 }]] },
    "Get User's Question": { "main": [[{ "node": "ai_agent", "type": "main", "index": 0 }]] },
    "AI Agent": { "main": [[{ "node": "reply_user", "type": "main", "index": 0 }]] }
  }
}
